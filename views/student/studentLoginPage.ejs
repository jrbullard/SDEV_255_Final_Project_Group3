<%- include('../partials/header'); -%>
  <body>
    <script src="/student/studentLogin.js" defer></script>
    <div class="wrapper">
      <form action="/teacherIndex" class="signin center" method="get">
        <h1 style="text-align: center;">Student Login</h1>
        <hr style="height: 1px;background-color:#7f0f81;"/>
        <label for="email">Email</label>
        <input type="text" name="email" id="email" required />
        <div class="email error"></div>
        <label for="password">Password</label>
        <input type="password" name="password" id="password" required />
        <div class="password error"></div>
        <input type="text" name="role" value="student" style="display:none;"/>
        <button>Login</button>
      </form>
    </div>
<%- include('../partials/footer'); -%>